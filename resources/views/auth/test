<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <meta name="csrf-token" content="{{ csrf_token() }}">
</head>
<body>

<div id="status"></div>

<div id="response-message"></div>

<h2>Logout</h2>
<form id="logout-form">
    @csrf
    <button type="button" onclick="logout()">Logout</button>
</form>

<h2>Login</h2>
<form id="login-form">
    @csrf
    <div>
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" value="{{ old('email') }}" required autofocus>
    </div>

    <div>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" required>
    </div>

    <br>

    <button type="button" onclick="submitForm()">Login</button>
</form>

<script>
    // Function to check authentication status using the server
    function checkAuthenticationStatus() {
        $.ajax({
            type: 'GET',
            url: '/api/v1/auth-status',
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            },
            xhrFields: {
                withCredentials: true
            },
            success: function(response) {
                console.log(response);
                updateAuthenticationStatus(response.authenticated);
            },
            error: function(xhr) {
                console.error('Error checking authentication status:', xhr.responseText);
                updateAuthenticationStatus(false);
            }
        });
    }

    // Function to update the authentication status in the UI
    function updateAuthenticationStatus(authenticated) {
        const statusDiv = document.getElementById('status');
        if (authenticated) {
            statusDiv.textContent = `You are authenticated.`;
        } else {
            statusDiv.textContent = `You are not authenticated. Log in to continue.`;
        }
    }

    // Initial check when the page loads
    checkAuthenticationStatus();

    function submitForm() {
        let formData = $('#login-form').serialize();
        $.ajax({
            type: 'POST',
            url: '/api/v1/login',
            data: formData,
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            },
            xhrFields: {
                withCredentials: true
            },
            success: function(response) {
                console.log(response);
                $('#response-message')
                    .html('<div style="color: green;">Login successful!</div>');
                checkAuthenticationStatus(); // Update authentication status after login
            },
            error: function(xhr) {
                let errorMessage = xhr.responseJSON.message || 'Login failed. Please try again.';
                $('#response-message')
                    .html('<div style="color: red;">' + errorMessage + '</div>');
            }
        });
    }

    function logout() {
        $.ajax({
            type: 'POST',
            url: '/api/v1/logout',
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            },
            success: function(response) {
                console.log(response.message);
                checkAuthenticationStatus(); // Update authentication status after logout
            },
            error: function(xhr) {
                console.error('Logout failed:', xhr.responseText);
            }
        });
    }
</script>

</body>
</html>
